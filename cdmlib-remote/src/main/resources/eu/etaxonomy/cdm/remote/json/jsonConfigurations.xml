        </entry>
      </map>
    </property>
    <property name="ignoreDefaultExcludes" value="true" />
    <property name="excludes">
      <list value-type="java.lang.String">
        <value>declaringClass</value><!-- DefaultExclude -->
        <value>metaClass</value><!-- DefaultExclude -->
        <value>id</value>
